{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs", "npm"]
        },
        "install": {
          "cmd": "cd backend && npm ci"
        },
        "build": {
          "cmd": "cd backend && npm run build"
        }
      },
      "start": {
        "cmd": "cd backend && npm start"
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}